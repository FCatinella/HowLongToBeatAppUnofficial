<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.airbnb.lottie.LottieAnimationView
        app:layout_constraintVertical_chainStyle="packed"
        android:id="@+id/no_game_found_lottieView"
        app:layout_constraintDimensionRatio="1"
        android:layout_width="200dp"
        app:lottie_autoPlay="true"
        android:tint="@color/white"
        app:lottie_loop="true"
        app:lottie_repeatMode="reverse"
        app:layout_constraintBottom_toTopOf="@id/no_game_found_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_rawRes="@raw/no_game_found"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/no_game_found_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/no_game_found_lottieView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="No game found"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="386dp" />
</androidx.constraintlayout.widget.ConstraintLayout>